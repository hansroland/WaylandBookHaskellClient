    build-depends:    base ^>=4.17.0.0,
                      random-strings,
                      -- shared-memory,        -- package from Niklas HambÃ¼chen
                      unix
    hs-source-dirs:   src
    default-language: Haskell2010
    extra-libraries:  wayland-client

executable client
    import:           warnings
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        base ^>=4.17.0.0,
        unix,
        hsclient

    hs-source-dirs:   app
